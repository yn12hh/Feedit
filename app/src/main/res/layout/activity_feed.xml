<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feed">



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="74dp"
            android:layout_height="69dp"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/ic_add_circle"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/test"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:layout_alignParentBottom="true"
    app:menu="@menu/bottom_navigation"
    app:itemIconSize="@dimen/bottom_navigation_icon_size" />


    <ImageView
        android:id="@+id/feed_icon"
        android:layout_width="88dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/feed_icon" />

    <TextView
        android:id="@+id/feedit"
        android:layout_width="79dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentBottom="@+id/fragment_container"
        android:gravity="center_horizontal|top"
        android:text="@string/feedit"
        android:textAppearance="@style/feedit" />

    <ImageView
        android:id="@+id/toolbar_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="@+id/fragment_container"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginRight="-4dp"
        app:srcCompat="@drawable/toolbar_rectangle" />

    <ImageView
        android:id="@+id/ic_search"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/toolbar_background"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="9dp"
        app:srcCompat="@drawable/ic_search" />

    <TextView
        android:id="@+id/projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_container"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/ic_search"
        android:layout_toLeftOf="@+id/ic_search"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="@string/projects" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_recycler_view"
        android:layout_width="385dp"
        android:layout_height="646dp"
        android:layout_below="@+id/toolbar_background"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="23dp" />


</RelativeLayout>