<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_line_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/save" />

        <ImageView
            android:id="@+id/sign_out_button"
            android:layout_width="63dp"
            android:layout_height="40dp"
            android:layout_marginEnd="252dp"
            android:layout_marginRight="252dp"
            android:layout_weight="1"
            android:onClick="signOut"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/save"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/turn_off" />

        <ImageView
            android:id="@+id/back_imagview"
            android:layout_width="8dp"
            android:layout_height="40dp"
            android:layout_marginRight="21dp"
            app:layout_constraintEnd_toStartOf="@+id/sign_out_button"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_dots" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/vector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="491dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teams_image"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:layout_marginLeft="27dp"
            app:srcCompat="@drawable/teams" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_text_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="All"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clear_text_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:text="Clear"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plus_image_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/edit_image_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/trash_image_teams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/main_office_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Main Office"
            android:textSize="14sp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/production_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Production"
            android:textSize="14sp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/pr_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="PR"
            android:textSize="14sp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/executive_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Executive"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/r_and_d_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="R &amp; D"
            android:textSize="14sp"
            android:onClick="onCheckboxClicked"/>

        <CheckBox
            android:id="@+id/marketing_team"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Marketing"
            android:textSize="14sp"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/projects_image"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:layout_marginLeft="23dp"
            app:srcCompat="@drawable/projects" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/all_text_projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="All"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clear_text_projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:text="Clear"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plus_image_projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/edit_image_projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/trash_image_projects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/project_1_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Project 1"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/project_2_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Project 2"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/project_3_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Project 3"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/project_4_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Project 4"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/project_5_projects"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Project 5"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>